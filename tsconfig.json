{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "allowJs": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": false,
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "removeComments": true,
  },
  "include": [
    "**/*",
    "locales/*.json"
  ]
}