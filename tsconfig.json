{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": false,
    "declaration": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/locales/*.json"
  ]
}